{#
/**
 * @file
 * Default theme implementation for the Tableau Take Home Assessment block.
 *
 *
 * This template will be used when the Tableau Take Home Assessment block has
 * been enabled. 
 *
 * Available variables:
 * - button_text: The text/copy to be used for the ajax button.
 *
 * @ingroup themeable
 */
#}
<button class="a-tableau__button js-ajax-button">
    <span class="shadow"></span>
    <span class="edge"></span>
    <span class="front">{{ button_text }}</span>
</button>

<span class="spinner__container">
    <svg viewBox="0 0 100 100">
        <defs>
            <filter id="shadow">
                <feDropShadow dx="0" dy="0" stdDeviation="1.5"  flood-color="#fc6767"/>
            </filter>
        </defs>
        <circle class="spinner" style="fill:transparent;stroke:#dd2476;stroke-width: 7px;stroke-linecap: round;filter:url(#shadow);" cx="50" cy="50" r="45"/>
    </svg>
</span>

<table class="a-tableau__table"></table>
